<div class="container align-center">
    <div class="row">
        <h1>
            Eat Da Burger!
        </h1>
        <img src="../public/assets/img/burger.jpg" alt="Burger">
    </div>

    <div class="row">
        <div class="col-lg-6" id="burgers">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block eaten=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-lg-6" id="eaten-burgers">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block eaten=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <form>
            <div class="form-group">
                <label for="burger-input"></label>
                <textarea class="form-control" id="burger-input" rows="3"></textarea>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>